@model EntityOrder

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header text-center bg-gradient-to-r from-purple-400 via-pink-500 to-red-500 text-white py-4">
                    <h4>Create Order</h4>
                </div>
                <div class="card-body">
                    <form asp-action="CreateOrder">

                        <div class="form-group mb-4">
                            <label for="Name" class="form-label text-primary">Full Name</label>
                            <input asp-for="Name" class="form-control input-animation" placeholder="Enter your full name" />
                        </div>

                        <div class="form-group mb-4">
                            <label for="Email" class="form-label text-primary">Email Address</label>
                            <input asp-for="Email" class="form-control input-animation" placeholder="Enter your email" />
                        </div>

                        <div class="form-group mb-4">
                            <label for="Mobile" class="form-label text-primary">Mobile Number</label>
                            <input asp-for="Mobile" class="form-control input-animation" placeholder="Enter your mobile number" />
                        </div>

                        <div class="form-group mb-4">
                            <label for="Amount" class="form-label text-primary">Amount</label>
                            <input asp-for="Amount" class="form-control input-animation" placeholder="Enter the amount" />
                        </div>

                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-success btn-lg w-100 submit-button">Proceed to Pay</button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add the following CSS for styles and animations -->
<style>
    /* Gradient Background for the Card Header */
    .bg-gradient-to-r {
        background: linear-gradient(135deg, #6a1b9a, #d500f9, #ff1744);
    }

    /* Input Fields Animation */
    .input-animation {
        transition: all 0.3s ease-in-out;
    }

    .input-animation:focus {
        transform: scale(1.05);
        border-color: #ff1744;
        box-shadow: 0 0 10px rgba(255, 23, 68, 0.5);
    }

    /* Hover Effect for Submit Button */
    .submit-button {
        transition: all 0.3s ease;
    }

    .submit-button:hover {
        background-color: #ff1744;
        transform: scale(1.1);
    }

    /* Card Shadow Effect */
    .card {
        transition: all 0.3s ease-in-out;
    }

    .card:hover {
        transform: translateY(-5px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
    }

    /* Button Text Color */
    .btn-success {
        background-color: #ff1744;
        border-color: #ff1744;
    }
</style>
